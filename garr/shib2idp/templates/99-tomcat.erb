local1.*                        /var/log/tomcat.log
local2.*                        /opt/shibboleth-idp/logs/shib-idp-process.log
local3.*                        /opt/shibboleth-idp/logs/shib-idp-audit.log
local4.*                        /var/log/slapd.log
local5.*                        /opt/shibboleth-idp/logs/shib-idp-access.log

# provides UDP syslog reception
$ModLoad imudp
$UDPServerRun 514

# provides TCP syslog reception
$ModLoad imtcp
$InputTCPServerRun 514

<% if !@logserver.nil? -%>
*.* @@<%= @logserver %>:514
<% end -%>
